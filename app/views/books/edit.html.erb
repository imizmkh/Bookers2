<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      
      <%= form_for @book do |f| %>
        <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
            <% @book.errors.full_messages.each do |message| %>
              <%= message %>
        </div>      
     
            <% end %>
        <% end %>  
      <% end %>
      
        <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"本のタイトル", class:"form-control title" %>
        </div>
        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"感想", class:"form-control opinion" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-secondary" %>
        </div>
        <% end %>
        
        <p>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
        </p>
    </div>
  </div>
</div>