
<%= render 'books/list', user: @user, book: @book %>


<div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <thead>
                <tr>
                  <td>
                  <%= link_to user_path(@books.user) do %>
                   <%= attachment_image_tag @books.user, :profile_image, format: ' jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
                   <%= @books.user.name %>
                  <% end %>
                </td>
                <td><%= link_to @books.title %></td>
                <td><%= @books.body %></td>
                <% if @books.user.id == current_user.id %> 
                <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to 'Destroy', book_path(@books), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか?" %></td>
                <% end %>
              
                
                
                
                
              </tr>
            
          </tbody>
        </table>
    </div>
  </div>
</div>
