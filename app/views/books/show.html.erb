<%= flash[:success] %>

<%= render 'books/list', user: @user, book: @book %>

<h2>Book detail</h2>
<table>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
        <%= current_user.name %>
      </td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>     